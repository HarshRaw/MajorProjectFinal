@model MajorProject.Models.CarModel

@{
    ViewData["Title"] = "Edit";
}
<div style="padding-top:6rem;padding-left:2rem;padding-right:2rem">

<h1>Edit</h1>

<h4>CarModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
