@model MajorProject.Models.Issue

@{
    ViewData["Title"] = "Create";
}
<div style="padding-top:6rem;padding-left:2rem;padding-right:2rem">
    <h1>Create</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car" class="control-label"></label>
                <select asp-for="Car" class ="form-control" asp-items="ViewBag.Car"></select>
            </div>
            <div class="form-group">
                <label asp-for="Urgency" class="control-label"></label>
                <select asp-for="Urgency" class ="form-control" asp-items="ViewBag.Urgency"></select>
            </div>
            <div class="form-group">
                <label asp-for="IssueCategory" class="control-label"></label>
                <select asp-for="IssueCategory" class ="form-control" asp-items="ViewBag.IssueCategory"></select>
            </div>
            <div class="form-group">
                <label asp-for="Services" class="control-label"></label>
                <input asp-for="Services" class="form-control" />
                <span asp-validation-for="Services" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>