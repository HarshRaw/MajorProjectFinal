@model MajorProject.Models.ServiceBooking

@{
    ViewData["Title"] = "Details";
}
<div style="padding-top:6rem;padding-left:2rem;padding-right:2rem">

<h1>Details</h1>

<div>
    <h4>ServiceBooking</h4>
    <hr />
    <dl class="row">
            <dt class="col-sm-2">
                Your Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Issues.Cars.Customers.CustomerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ServiceBookingId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ServiceBookingId)
            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Issues)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Issues.IssueId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Services)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Services.ServiceDescription)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentLocationOfCar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentLocationOfCar)
        </dd>
    </dl>
</div>
<div>
    To Be Paid:    @Html.DisplayFor(model => model.Services.Price)
        <a class="btn btn-outline-primary" asp-area="OnWayVehicleService" asp-controller="Payments" asp-action="Create">Get Your Payment Done!(Kindly Note Your Service Booking Id Id)</a>

</div>
</div>
